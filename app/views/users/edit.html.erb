<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h2>User info</h2>

    <% @user.errors.full_messages.each do |message| %>
     <div class="error-message">
      <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
      <ul>
        <li><%= message %></li>
      </ul>
     </div>
    <% end %>


    <%= form_with model:@user, local:true do |f| %>

      <label for="user_name">Name</label>
      <div class="form-group">
        <%= f.text_field :name, autofocus: true, id:"inputName" %>
      </div>

      <label for="user_image">Image</label>
      <div class="form-group">
        <%= f.attachment_field :profile_image %>
      </div>

      <label for="user_introduction">Introduction</label>
      <div class="form-group">
        <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class: 'btn btn-secondary' %>
      </div>
    <% end %>

    </div>
  </div>
</div>